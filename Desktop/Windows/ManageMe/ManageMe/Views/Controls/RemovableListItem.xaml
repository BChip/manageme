<UserControl x:Class="ManageMe.Views.Controls.RemovableListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManageMe.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="25">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBoxText" Grid.Column="0" Margin="4" Foreground="White"></TextBlock>
        <Button x:Name="buttonRemove" Grid.Column="1" Height="20" Width="20" Style="{DynamicResource ManageMeButton}" Click="buttonRemove_Click">
            <Image Source="/ManageMe;component/Resources/Images/cancel.png"></Image>
        </Button>
    </Grid>
</UserControl>
