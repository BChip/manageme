<UserControl x:Class="ManageMe.Views.Controls.RequirementListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManageMe.Views.Controls"
             mc:Ignorable="d">

    <Grid Height="45" MouseDown="Grid_MouseDown">
        <Border x:Name="borderSelected" BorderThickness="1 1 0 1" BorderBrush="#3CA2E0" Background="White" Opacity="1">
            <Grid Background="White">
                <TextBlock x:Name="textBlockRequirementName" FontSize="18" VerticalAlignment="Center" Margin="15 0 0 0">Requirement 1</TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
