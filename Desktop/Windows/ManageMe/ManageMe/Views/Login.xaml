<Window x:Class="ManageMe.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageMe.Views"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="300" ResizeMode="CanMinimize" WindowStyle="None" Background="#3CA2E0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonExit" Grid.Row="0" Background="Transparent" BorderBrush="Gray" Width="20" Height="20" Margin="5" HorizontalAlignment="Right" Click="buttonExit_Click">
            X
        </Button>
        <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Center">
            <TextBox Grid.Row="1" x:Name="textBoxUserName"  Height="25" Margin="10 0 10 5"></TextBox>
            <TextBox Grid.Row="1" x:Name="textBoxPassword" Height="25" Margin="10 0 10 5"></TextBox>
            <Button x:Name="buttonLogin" Height="25" Width="125" Margin="0 0 0 5" BorderBrush="#FF707070" Style="{DynamicResource RoundBlueButton}">Login</Button>
            <Button x:Name="buttonSignUp" Height="25" Width="125" Style="{DynamicResource RoundBlueButton}">Signup</Button>
        </StackPanel>

    </Grid>
</Window>
